<div id="flash" class="alert-box alert" ng-show="flash">{{ flash }}</div>

<div class="container">
  <div class="panel panel-primary">

    <div class="panel-heading">
      <h3 class="panel-title">Login Form</h3>
    </div>

    <div class="panel-body">
      Use one of the test users:
      <ul>
	<li ng-repeat="user in sampleUsers">
	  {{user.username}} / {{user.password}}
	</li>
      </ul>
      
      <form ng-submit="login()">
	<div class="control-group">
	  <label for="username" class="control-label" >Username:</label>
	  <div class="controls">
	    <input id="username" type="text" ng-model="credentials.username" autofocus />
	  </div>
	</div>
	<div class="control-group">
	  <label for="password" class="control-label" >Password:</label>
	  <div class="controls"><input id="password" type="password" ng-model="credentials.password"></div>
	</div>
    </br>
    <div class="control-group">
      <div class="controls">
        <input type="submit" class="btn" value="submit">
      </div>
    </div>
      </form>
    </div>
  </div>
</div>
